<% content_for :title, "Connexion - Eligia" %>
<% content_for :scroll_navbar, 'scroll-navbar' %>
<% content_for :home_navbar, 'home-navbar' %>
<%= render 'shared/navbar' %>

  <div class="fullscreen-no-footer gradient-bg mobile-contact-grid">
    <%= image_tag("login.svg", alt:'login logo', class:'login-image') %>
    <div class="form-div">
      <h3>Mot de passe oubliÃ©</h3>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: 'Entrez votre email' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Recevoir un email", class:'btn-principal' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="container">
  <h2>Inscrivez-vous pour pouvoir continuer</h2>
  <div class="form-div">
    <h3>S'inscrire</h3>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    required: true,
                    label: false,
                    placeholder:'Prénom' %>
        <%= f.input :last_name,
                    required: true,
                    label: false,
                    placeholder:'Nom' %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder:'email'%>
        <%= f.input :password,
                    required: true,
                    # hint: ("#{@minimum_password_length} 6 caractères minimum" if @minimum_password_length),
                    label: false,
                    placeholder:'Mot de Passe' %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    placeholder:'Confirmation du mot de passe' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "S'inscrire", class:'btn-second' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

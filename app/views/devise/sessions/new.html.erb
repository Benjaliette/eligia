<% content_for :title, "Connexion - Eligia" %>
<% content_for :scroll_navbar, 'scroll-navbar' %>
<% content_for :home_navbar, 'home-navbar position-fixed' %>
<%= render 'shared/navbar' %>

  <div class="gradient-bg vh-100">
    <%= image_tag("login.svg", alt:'login logo', class:'login-image') %>

    <div class="form-div">
      <div class="form-text">
        <h2 class='home-title no-margin'>S'identifier</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        label: false,
                        placeholder:'Adresse email',
                        required: false,
                        autofocus: true %>
            <div class='show-password-devise' data-controller='show-password'>
              <%= f.input :password,
                          label: false,
                          placeholder:'Mot de Passe',
                          required: false,
                          input_html: { data: { 'show-password-target':'field' } } %>
              <div class="show-password-btn" data-action='click->show-password#show' data-show-password-target='eye'>
                <i class="fa-solid fa-eye"></i>
              </div>
            </div>
            <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Connexion", class:"btn-principal" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

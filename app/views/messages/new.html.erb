<% content_for :title, "Contact - Eligia" %>
<% content_for :scroll_navbar, 'scroll-navbar' %>
<% content_for :home_navbar, 'home-navbar' %>
<%= render 'shared/navbar' %>

<div class="gradient-bg">
  <%= image_tag("login.svg", alt:'login logo', class:'login-image view-bottom') %>
  <div class="mobile-contact-grid">
    <div class='contact-form-part'>
      <h2 class="dashboard-title">Contactez nous</h2>
      <p class="margin-top-five margin-bottom-five">
        Pour en savoir plus sur notre service ou pour poser n'importe quelle question,
        veuillez remplir le formulaire ci-dessous
      </p>

      <%= simple_form_for @message do |f| %>
        <div class="contact-form">
          <div class="contact-form-head">
            <%= f.input :name,
                            label: 'Votre nom',
                            input_html: { class: 'form-name-input' },
                            autofocus: true %>
            <%= f.input :email,
                            label: 'Votre email',
                            input_html: { class: 'form-name-input' } %>
          </div>
          <%= f.input :body,
                          label: 'Votre message',
                          as: :text,
                          input_html: { class: 'form-name-input-text' } %>
        </div>
        <div class="form-actions align-center">
          <%= f.submit 'Envoyer', class: 'btn-principal' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="order-account-card">
  <div class="account-name d-flex justify-content-center align-items-center">
    <%= order_account.account.name %>
  </div>
  <div class="order-creation-date d-flex justify-content-center align-items-center">
      <%= order_account.created_at.strftime('%d/%m/%y') %>
  </div>
  <div class="order-account-status order-account-state-<%=order_account.aasm_state%> d-flex justify-content-center align-items-center align-center">
      <%= order_account.state_to_french %>
  </div>

  <% if order_account.aasm_state == 'documents_missing' %>
    <div class = "d-flex justify-content-center align-items-center">
      <%= link_to "Ajouter", edit_order_path(order_account.order), class: 'btn-second'  %>
    </div>
  <% end %>

</div>

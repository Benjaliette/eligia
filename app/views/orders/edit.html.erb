<div class="container">
  <div class="fullscreen">
    <%= render 'order_creation_steps', step: 1 %>
    <%= simple_form_for @order, remote: true do |f| %>
      <% @order_documents.each do |order_document| %>
        <div class="insert-document">
          <%= f.simple_fields_for :order_documents, order_document, remote: true do |fod| %>
          <label>
            <%= order_document.document.name %>
            <%= fod.input :document_file, label: "Ajouter", as: :file, input_html:{class:'hidden-document-input'}, label_html:{class:'label-document-input'} %>
          </label>
          <div class="file-name">
          </div>
          <% end %>
        </div>
      <% end %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

<div class="footer"
     data-controller="footer-responsivity"
     data-action="resize@window->footer-responsivity#toggle">
  <div class="footer-items">
    <ul class="site-list" data-footer-responsivity-target='footerItems'>
      <li class="site-list-item">
        <%= link_to 'Nous contacter', new_message_path %>
      </li>
      <li class="site-list-item">
        <%= link_to 'Les tarifs', price_pages_path %>
      </li>
    </ul>
    <div class="logo" data-footer-responsivity-target='bigLogo'>
      <%= link_to root_path do %>
        <%= image_tag('eligia-sans-fond-vecto.svg', alt:'Logo Eligia') %>
      <% end %>
    </div>
    <div class="short-logo display-none" data-footer-responsivity-target='shortLogo'>
      <%= link_to root_path do %>
        <%= image_tag('eligia-e-vecto.svg', alt:'Logo Eligia') %>
      <% end %>
    </div>
  </div>
</div>

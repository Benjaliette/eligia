<div class="navbar"
     data-controller="navbar-responsivity"
     data-action="resize@window->navbar-responsivity#toggle">
  <div class="container"
       data-controller="navbar-dropdown">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag('eligia-sans-fond-vecto.svg', alt:'Logo Eligia') %>
      <% end %>
    </div>
    <ul class="nav-items"
        data-navbar-responsivity-target="navitems">
      <li class="nav-item">
        <%= link_to 'Tarifs', price_pages_path %>
      </li>
      <li class="nav-item">
        <%= link_to 'Nous contacter', new_message_path %>
      </li>
      <li class="nav-item" id="user">
        <% if current_user %>
          <div class="avatar", data-action="click->navbar-dropdown#dropdown" >
            <%= current_user.first_name[0].upcase + current_user.last_name[0].upcase %>
          </div>
          <ul class="navbar-dropdown" data-navbar-dropdown-target="dropdowndiv">
            <li>
              <i class="fa-solid fa-house-user fa-xl"></i>
              <%= link_to "Mon compte", user_path(current_user) %>
            </li>
            <li>
              <i class="fa-solid fa-right-from-bracket fa-xl"></i>
              <%= button_to 'DÃ©connexion', destroy_user_session_path, method: :delete, class: "button-hover"  %>
            </li>
          </ul>
        <% else %>
          <%= link_to 'Connexion/Inscription', new_user_session_path %>
        <% end %>
      </li>
    </ul>
    <div class="display-none hamburger"
         data-navbar-responsivity-target="hamburger"
         data-action="click->navbar-dropdown#toggleDropdown">
      <i class="fa-solid fa-bars fa-xl" data-navbar-dropdown-target="hamburgerIcon"></i>
      <ul class="toggle-nav-items display-none" data-navbar-dropdown-target="toggleDropdowndiv">
        <li class="toggle-nav-item">
          <%= link_to 'Tarifs', price_pages_path %>
        </li>
        <li class="toggle-nav-item">
          <%= link_to 'Nous contacter', new_message_path %>
        </li>
        <li class="toggle-nav-item">
          <% if current_user %>
            <%= link_to 'Mon compte', user_path(current_user) %>
          <% else %>
            <%= link_to 'Connexion/Inscription', new_user_session_path %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

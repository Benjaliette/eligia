<div class="navbar"
     data-controller="navbar-responsivity"
     data-action="resize@window->navbar-responsivity#toggle">
  <div class="container"
       data-controller="navbar-dropdown">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag 'eligia-sans-fond-vecto.svg' %>
      <% end %>
    </div>
    <ul class="nav-items"
        data-navbar-responsivity-target="navitems">
      <li class="nav-item">
        <%= link_to 'Tarifs', price_pages_path %>
      </li>
      <li class="nav-item">
        <%= link_to 'Nous contacter', contact_pages_path %>
      </li>
      <li class="nav-item" id="user">
        <% if current_user %>
          <div class="avatar", data-action="click->navbar-dropdown#dropdown" >
            <%= current_user.first_name[0].upcase + current_user.last_name[0].upcase %>
          </div>
        <% else %>
          <%= link_to 'Connexion/Identification', new_user_session_path %>
        <% end %>
        <div class="navbar-dropdown" data-navbar-dropdown-target="dropdowndiv">
          <%= link_to "Se dÃ©connecter", destroy_user_session_path, data: { turbo_method: :delete } %>
        </div>
      </li>
    </ul>
    <div class="display-none hamburger"
         data-navbar-responsivity-target="hamburger"
         data-action="click->navbar-dropdown#toggleDropdown">
      <i class="fa-solid fa-bars fa-xl"></i>
      <ul class="toggle-nav-items display-none" data-navbar-dropdown-target="toggleDropdowndiv">
        <li class="toggle-nav-item">Tarifs</li>
        <li class="toggle-nav-item">Nous contacter</li>
        <li class="toggle-nav-item">Mon compte</li>
      </ul>
    </div>
  </div>
</div>

<% content_for :title, "Confirmer mon mot de passe - Eligia" %>
<div class="container" data-controller="remove-footer">
  <div class="form-div">
    <h2>Confirmation du mot de passe actuel</h2>

    <%= simple_form_for(@current_user, url: control_password_check_user_path(@current_user), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :current_password,
                    label: false,
                    placeholder:'Mot de Passe',
                    required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Changer le mot de passe", class:"btn-principal" %>
      </div>
    <% end %>
  </div>
</div>
